CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

school.o: school.c
	$(CC) -c school.c

main.o: main.c
	$(CC) -c main.c

clean:
	-$(RM) *~ .*.swp .*.swo $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re:
	@# $(CC) -c main.c
	$(CC) -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)
