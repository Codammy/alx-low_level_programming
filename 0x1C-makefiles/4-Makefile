CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: $(SRC)

%.c:
	$(CC) -c $(CFLAGS) %.c

clean:
	-$(RM) *~ .*.swp .*.swo $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean:
	-$(RM) *~ .*.swp .*.swo $(NAME)
	-$(RM) $(OBJ)
re: $(SRC)
	$(CC) $(OBJ) -o $(NAME)
